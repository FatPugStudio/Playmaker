using UnityEngine;

namespace HutongGames.PlayMaker.Actions
{

    public class UBHStopShotRoutineAndPlayingShot : FsmStateAction
    {
        [RequiredField]
        [Tooltip("The GameObject with UbhShotCtrl component")]
        public FsmOwnerDefault gameObject;

        public override void Reset()

        {
            gameObject = null;
        }

        public override void OnEnter()
        {
			
			StopShot();
			Finish();
		}
		
		void StopShot()
		
		{
			
			var go = Fsm.GetOwnerDefaultTarget(gameObject);
			if (go == null)
		
			{
				return;
			}
			
		         
            var ubh = go.GetComponent<UbhShotCtrl>();
            
            if (ubh == null)
				
			{
                Debug.LogError("No UbhShotCtrl component found in the gameObject: " + go.name);
			}
			
            if (ubh != null)
			
			{
                ubh.StopShotRoutineAndPlayingShot();
				Finish();
			}
            
        }
    }
}
