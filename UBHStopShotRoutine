using UnityEngine;

namespace HutongGames.PlayMaker.Actions {

    public class UBHStopShotRoutine : ComponentAction<UbhShotCtrl>
    
    {
        [RequiredField]
        [CheckForComponent (typeof (UbhShotCtrl))]
        [Tooltip ("The GameObject with UbhBullet component")]
        public FsmOwnerDefault gameObject;

        public override void Reset ()

        {
            gameObject = null;
        }

        public override void OnEnter () {

            StopShot ();
            Finish ();
        }

        void StopShot ()

        {

            var go = Fsm.GetOwnerDefaultTarget (gameObject);
            if (!UpdateCache (go))

            {
                return;
            }

            var ubh = go.GetComponent<UbhShotCtrl> ();

            if (ubh == null)

            {
                Debug.LogError ("No UbhShotCtrl component found in the gameObject: " + go.name);
            }

            if (ubh != null)

            {
                ubh.StopShotRoutine ();
                Finish ();
            }

        }
    }
}
